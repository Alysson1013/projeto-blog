<%- include ('../../partials/header.ejs')%>
<body>
    <%- include ('../../partials/navbar.ejs')%>
    <div class="container">
        <br>
        <h2>
            Artigos
        </h2>
        <a href="/admin/articles/new"><button class="btn btn-success">Criar novo artigo</button></a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Categoria</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% articles.forEach((article)=>{%>
                    <tr>
                        <td><%= article.id %></td>
                        <td><%= article.title %></td>
                        <td><%= article.slug %></td>
                        <td><%= article.categoria.title %></td>
                        <td>Ações</td>
                    </tr>
                <%})%>
            </tbody>
            
        </table>
    </div>
    <script>
        function confirmDelete(event, form){
            event.preventDefault()
            var decision = confirm("Você tem certeza que quer deletar essa categoria?")
            if(decision){
                form.submit();
            }
        }
    </script>
</body>
<%- include ('../../partials/footer.ejs')%>
