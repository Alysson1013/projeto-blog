<%- include ('../../partials/header.ejs')%>
<body>
    <%- include ('../../partials/navbar.ejs')%>
    <div class="container">
        <br>
        <div class="card">
            <div class="card-header">
                <h2>Editação de Artigo</h2>
            </div>
            <div class="card-body">
                <form method="POST" action="/articles/update">
                    <input class="form-control" type="text" name="title" placeholder="Defina o Título do artigo." value="<%= article.title %>">
                    <textarea class="form-control" placeholder="Edite seu artigo aqui!" name="body" id="article"><%- article.body %></textarea>
                    <br>
                    <input type="hidden" name="id" value="<%= article.id %>">
                    <br>
                    <select name="category" id="form-control">
                        <% categories.forEach((category)=>{ %>
                                <% if (article.categoriaId == category.id){ %>
                                    <option value="<%= category.id %>" name="category" selected><%= category.title %></option>
                                <% } else { %>
                                    <option value="<%= category.id %>" name="category"><%= category.title %></option>
                                <% } %>
                        <% }) %>
                    </select>
                    <button class="btn btn-success">Salvar</button>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include ('../../partials/footer.ejs')%>

<script src="/tinymce/js/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: "#article",
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticon'
        ],
        language: 'pt_BR'
    })
</script>